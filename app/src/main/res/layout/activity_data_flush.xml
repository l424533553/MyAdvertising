        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="商品价格>>"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="待更新"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />

            <Button
                android:id="@+id/btnPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_btn_clean"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="更新"
                android:textColor="@color/selector_btn_text"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="检测结果>>"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tvInspect"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="待更新"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />

            <Button
                android:id="@+id/btnInspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_btn_clean"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="更新"
                android:textColor="@color/selector_btn_text"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="二维码图片>>"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />

            <TextView
                android:id="@+id/tvSmallRoutine"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:onClick="@{onClickListener}"
                android:text="待更新"
                android:textColor="@color/black"
                android:textSize="@dimen/sp20" />

            <Button
                android:id="@+id/btnSmallRoutine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_btn_clean"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="更新"
                android:textColor="@color/selector_btn_text"
                android:textSize="@dimen/sp20" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常规数据更新"
                android:textColor="@color/color_red"
                android:textSize="@dimen/sp16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="轮播图片>>"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <TextView
                    android:id="@+id/tvSecondImage"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="待更新"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp20" />

                <Button
                    android:id="@+id/btnSecondImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/selector_btn_clean"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="更新"
                    android:textColor="@color/selector_btn_text"
                    android:textSize="@dimen/sp20" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnUpData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_clean"
            android:paddingStart="@dimen/x20"
            android:paddingTop="@dimen/x5"
            android:paddingEnd="@dimen/x20"
            android:paddingBottom="@dimen/x5"
            android:text="数据更新"
            android:textColor="@color/selector_btn_text"
            android:textSize="@dimen/sp30"
            android:textStyle="bold"
            tools:ignore="NestedWeights" />
    </LinearLayout>
</layout>